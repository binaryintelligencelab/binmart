	<div id="form_container">			
			<form class="article_classe" method="post" action="/admin/addtypical">
				<label for="classe">
					Classe :
					<select id="classe" name="classe">
						<option></option>
					</select>
					{{#if noClasse}}
						<span class="required">Veuillez selectionez la classe</span>
					{{/if}}
					{{#if body.classe}}
						<em id="bodyClasse" style="display:none">{{body.classe}}</em>
					{{/if}}
				</label>
				<label for="category">
					Categorie :
					<select id="category" name="category">
						<option></option>
					</select>
					{{#if noCategory}}
						<span class="required">Veuillez selectionez la category</span>
					{{/if}}
					{{#if body.category}}
						<em id="bodyCategorie" style="display:none">{{body.category}}</em>
					{{/if}}					
				</label>
			
				<h2>Ajoutez une nouvelle caracteristique</h2>
				<label for="detailname">
					Nom:<input type="text" value="{{body.detailname}}" placeholder="Caracteristique" name="detailname"/>
					{{#if nodetailname}}
						<span class="required">Inserez le nom de la caracteristique</span>
					{{/if}}
				</label>
				<label for="detailval">
					Valeur:<input type="text" value="{{body.detailval}}" placeholder="Valeur" name="detailval"/>
					{{#if nodetailval}}
						<span class="required">Inserez la valeur de la caracteristique</span>
					{{/if}}
				</label>
				<input type="submit" value="Ajoutez" placeholder="Valeur" class="submit"/>
				{{#if detail_existed}}
					<span style="padding-top:0.5em;color:rgba(255,0,0,0.7)">Cette caracteristique existe deja</span>
				{{/if}}
			</form>
