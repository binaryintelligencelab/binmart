<section id="login_container">
				<div class="login_wrapper">
					<div class="login_form">
							<h1>Compte pour vendeur</h1>							
							<form method="post" action="/admsignup">								
								<label for="adminname">
									Nom
										<input type="text" placeholder="votre nom; exemple : Kapenda" value="{{body.adminname}}" name="adminname" autocomplete="off"/>									
									{{#if no_adminname}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badadminname}}
										<span class="required">{{badadminname}}</span>
									{{/if}}
								</label>
								<label for="surname">
									Prénom
										<input type="text" placeholder="votre prenom; exemple: Robert" value="{{body.surname}}" name="surname" autocomplete="off"/>									
									{{#if no_surname}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badsurname}}
										<span class="required">{{badadminname}}</span>
									{{/if}}
								</label>
								<label for="username">
									Indentifiant
										<input type="text" placeholder="Votre nom d'utisateur" value="{{body.username}}" name="username" autocomplete="off"/>
									{{#if no_username}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badusername}}
										<span class="required">{{badusername}}</span>
									{{/if}}
									{{#if user_exist}}
										<span class="required">{{user_exist}}</span>
									{{/if}}
								</label>
								
								<label for="name">
									Nom de l'établissement
										<input type="text" placeholder="votre nom complet" value="{{body.name}}" name="name" autocomplete="off"/>									
									{{#if no_name}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badname}}
										<span class="required">{{badname}}</span>
									{{/if}}
								</label>
								<label for="rccm">
									RCCM
										<input type="text" placeholder="Votre rccm" value="{{body.rccm}}" name="rccm" autocomplete="off"/>
									{{#if no_rccm}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badrccm}}
										<span class="required">{{badrccm}}</span>
									{{/if}}
								</label>
