								<label for="telephone">
									Numero de Telephone
										<input type="tel" placeholder="Numero de telephone" value="{{body.telephone}}" name="telephone" autocomplete="off"/>
					
									{{#if no_telephone}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									
									{{#if user_phone_exist}}
										<span class="required">{{user_phone_exist}}</span>
									{{/if}}
									{{#if no_valid_operator}}
										<span class="required">{{no_valid_operator}}</span>
									{{/if}}
									{{#if no_valid_number}}
										<span class="required">{{no_valid_number}}</span>
									{{/if}}
									
									{{#if check_number}}
										<span class="required">{{check_number}}</span>
									{{/if}}
									
								</label>
