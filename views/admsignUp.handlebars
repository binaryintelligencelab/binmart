									{{/if}}
								</label>
								
								<label for="commune">
									Commune
										<input type="text" placeholder="Commune" value="{{body.commune}}" name="commune" autocomplete="off"/>
									{{#if no_commune}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badcommune}}
										<span class="required">{{badcommune}}</span>
									{{/if}}
								</label>
								
								<label for="quarter">
									Quartier
										<input type="text" placeholder="Quartier" value="{{body.quarter}}" name="quarter" autocomplete="off"/>
									{{#if no_quarter}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badquarter}}
										<span class="required">{{badquarter}}</span>
									{{/if}}
								</label>								
								
								<label for="avenue">
									Avenue
										<input type="text" placeholder="Avenue" value="{{body.avenue}}" name="avenue" autocomplete="off"/>
									{{#if no_avenue}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badavenue}}
										<span class="required">{{badquarter}}</span>
									{{/if}}
