								<label for="numero">
									Numero
										<input type="text" placeholder="Numero" value="{{body.numero}}" name="numero" autocomplete="off"/>
									{{#if no_numero}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badnumero}}
										<span class="required">{{badnumero}}</span>
									{{/if}}
								</label>
								
								<label for="password">
									Mot de passe
									<input type="password" placeholder="Votre mot de passe" value="{{body.password}}" name="password"/>
									<span>Miminum 8 caracteres</span>
									{{#if no_password}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if badpassword}}
										<span class="required">{{badpassword}}</span>
									{{/if}}
									{{#if check_password_length}}
										<span class="required">{{check_password_length}}</span>
									{{/if}}
								</label>
								<label for="password_confirmation">
									Confirmez le mot de passe
									<input type="password" placeholder="Confirmer votre mot passe" value="{{body.password_confirmation}}" name="password_confirmation"/>
									{{#if no_password_confirmation}}
										<span class="required">Ce champ est obligatoire</span>
									{{/if}}
									{{#if check_password}}
											<span class="required">{{check_password}}</span>
									{{/if}}
									{{#if badconfirmation}}
											<span class="required">{{badconfirmation}}</span>
									{{/if}}
								</label>							
